<h1>dB8</h1>

{{#each debates}}
		<a href="/db8/{{this.id}}"><h2>{{this.debate_topic}}</h2></a>
{{/each}}

<br>
<br>
<button type="submit" class="createDebate">Create Debate</button>


<div id="modal" class="modal">
	<h2>Create a Debate</h1>
	<form action="/api/debates" method="POST">
			<input type="text" name="topic" placeholder="Ex. What is Better: Chinese Food vs Pizza"><br>
			<input type="text" name="sideA" placeholder="Ex. Chinese Food"><br>
			<input type="text" name="sideB" placeholder="Ex. Pizza"><br>
			<input type="submit" name="submit">
	</form>
</div>