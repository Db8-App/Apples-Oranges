<h2>Ongoing Debates</h2>

{{#each debates}}
	{{#unless this.archived}}
		<div class="indexDebate grow">
			<a href="/db8/{{this.id}}">
				<h4>{{this.debate_topic}}</h4>
				<h5 id="totalVotes{{this.id}}">Total Votes: {{this.totalVotes}}<h5>
			</a>
		</div>
	{{/unless}}
