{{#each debates}}
	{{#if this.archived}}
		<div class="indexDebate grow">
			<a href="/db8/{{this.id}}">
				<h4>{{this.debate_topic}}</h4>
				<h5>Winner: {{this.winner}}<h5>
			</a>
		</div>
	{{/if}}
